{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "jsx": "react-jsx", // For React 17 and newer
    // "jsx": "react", // For older versions of React
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
